<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('../partials/head.ejs') %>
  </head>
  <body>
    <nav>
      <% if(currentUser) { %>
      <h1 class="welcome-title-in">Stocked</h1>
      <a href="/items">Welcome <%=currentUser.username%></a>
      <form action="/sessions?_method=DELETE" method="post">
          <input class="logOutBtn" type="submit" value="Log Out">
      </form>
      <a href="/items">Back</a>
      <% } %>
    </nav>
    <div class="new-container">
    <h1 id="newItemH1" >New Item</h1>
    <div class="formNew">
    <form action="/items" method="POST">
      <input id="input" type="text" name="name" placeholder="name"/><br/>
      <input id="input" type="text" name="type" placeholder="type"/><br/>
      <input id="input" type="number" name="qty" placeholder="qty"><br/>
      <input id="input" type="date" name="expiration"/><br/>
      <input id="input" type="url" name="url" placeholder="https://example.com"><br/>
      <input id="input" class="submit-btn" type="submit" value="Submit"/>
    </form>
    </div>
    </div>
  </body>
</html>
